<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6202710455352099/6361829689" />

    <ImageView
        android:id="@+id/reel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:maxHeight="100dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/reel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reel1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:maxHeight="100dp"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/reel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reel2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:maxHeight="100dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/totalPointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reel3"
        android:layout_centerHorizontal="true"
        android:text="@string/total_points"
        android:textSize="20sp" />

    <Button
        android:id="@+id/spinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reel3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/spin" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinButton"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6202710455352099/6361829689" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adView"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6202710455352099/6361829689" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adView2"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6202710455352099/6361829689" />

</RelativeLayout>
